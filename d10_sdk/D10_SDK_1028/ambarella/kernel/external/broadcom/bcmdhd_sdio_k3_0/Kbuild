# bcmdhd
# WL_ENABLE_P2P_IF must be removed if kernel version is 3.8 later
DHDCFLAGS = -Wall -Wstrict-prototypes -Dlinux -DBCMDRIVER                \
	-DBCMDONGLEHOST -DUNRELEASEDCHIP -DBCMDMA32 -DWLBTAMP -DBCMFILEIMAGE  \
	-DDHDTHREAD -DDHD_DEBUG -DBDC -DTOE -DRXFRAME_THREAD -DDHD_RXBOUND=100 \
	-DDHD_BCMEVENTS -DSHOW_EVENTS -DBCMDBG                                \
	-DMMC_SDIO_ABORT -DBCMSDIO -DBCMLXSDMMC -DBCMPLATFORM_BUS             \
	-DWIFI_ACT_FRAME \
	-DKEEP_ALIVE -DPKT_FILTER_SUPPORT                                     \
	-DEMBEDDED_PLATFORM  -DPNO_SUPPORT          \
	-DDHD_USE_IDLECOUNT -DSET_RANDOM_MAC_SOFTAP -DVSDB                    \
	-DWL_CFG80211_VSDB_PRIORITIZE_SCAN_REQUEST -DSDIO_CRC_ERROR_FIX       \
	-DESCAN_RESULT_PATCH -DPASS_ARP_PACKET -DSUPPORT_PM2_ONLY   \
	-DDHD_DONOT_FORWARD_BCMEVENT_AS_NETWORK_PKT -DAMPDU_HOSTREORDER       \
	-DCUSTOM_SDIO_F2_BLKSIZE=512 -DWL_SDO -DWLTDLS                        \
	-DWL_SUPPORT_BACKPORTED_KPATCHES -DDHD_SDALIGN=32                    \
	-DDHD_FIRSTREAD=128 -DMAX_HDR_READ=128  -DDHDTCPACK_SUPPRESS \
	-DPROP_TXSTATUS -DPROP_TXSTATUS_VSDB                                  \
	-DDHDTCPACK_SUPPRESS                                   \
	-I$(AMB_TOPDIR)/kernel/external/broadcom/bcmdhd_sdio_k3_0		\
	-I$(AMB_TOPDIR)/kernel/external/broadcom/bcmdhd_sdio_k3_0/include

ifeq ($(TXGLOM_SUPPORT), y)
DHDCFLAGS += -DCUSTOM_SDIO_F2_BLKSIZE=512 -DDHD_FIRSTREAD=128 -DMAX_HDR_READ=128
DHDCFLAGS += -DCUSTOM_MAX_TXGLOM_SIZE=16 -DCUSTOM_DEF_TXGLOM_SIZE=16
DHDCFLAGS += -DBCMSDIOH_TXGLOM -DBCMSDIOH_TXGLOM_EXT -DCUSTOM_TXGLOM=1
DHDCFLAGS += -DCUSTOM_GLOM_SETTING=1
DHDCFLAGS += -DCONFIG_HIS -DPKT_STATICS
endif

DHDCFLAGS += -DDHD_DEBUG -DENHANCED_STATIC_BUF
DHDCFLAGS += -DFORCE_WOWLAN

DHDOFILES = aiutils.o bcmsdh_sdmmc_linux.o dhd_linux.o siutils.o bcmutils.o   \
	dhd_linux_sched.o bcmwifi_channels.o dhd_sdio.o bcmevent.o dhd_bta.o hndpmu.o  \
	bcmsdh.o dhd_cdc.o bcmsdh_linux.o dhd_common.o dhd_wlfc.o dhd_ip.o linux_osl.o \
	bcmsdh_sdmmc.o dhd_custom_gpio.o sbutils.o wldev_common.o wl_android.o \
	dhd_pno.o dhd_config.o wl_roam.o

obj-m += bcmdhd.o
bcmdhd-y += $(DHDOFILES)

############ Ambarella Platform ###############
ifeq ($(PROC_PM_STAT_SUPPORT),y)
DHDCFLAGS += -DADD_PROC_PM_STATE
endif

ifeq ($(ARP_OFFLOAD_SUPPORT),y)
DHDCFLAGS += -DARP_OFFLOAD_SUPPORT
endif

ifeq ($(CONFIG_PLAT_AMBARELLA),y)
DHDCFLAGS += $(AMBARELLA_DRV_CFLAGS)
#-DDHD_RX_DUMP -DDHD_RX_FULL_DUMP
#-DENABLE_VERBOSE_INFO -DHACK_TCPINFO_IN_RESUME -DADD_CKSUM_IN_RESUME

DHDCFLAGS +=-DCONFIG_BCMDHD_FW_PATH=$(BCMDHD_FW_PATH)		\
	-DCONFIG_BCMDHD_NVRAM_PATH=$(BCMDHD_NVRAM_PATH)
endif
########################################

ifeq ($(CONFIG_MACH_ODROID_4210),y)
DHDOFILES += dhd_gpio.o
DHDCFLAGS += -Iarch/arm/plat-samsung/include
DHDCFLAGS += -DCUSTOMER_HW
#DHDCFLAGS += -DBCMWAPI_WPI -DBCMWAPI_WAI
endif

ifeq ($(CONFIG_BCMDHD_OOB),y)
DHDOFILES += dhd_gpio.o
DHDCFLAGS +=-DCUSTOMER_OOB -DCUSTOMER_HW
DHDCFLAGS += -DOOB_INTR_ONLY -DHW_OOB
else
DHDOFILES += dhd_gpio.o
DHDCFLAGS += -DSDIO_ISR_THREAD -DCUSTOMER_HW
endif

ifeq ($(CONFIG_BCMDHD_POWER_OFF_IN_SUSPEND),y)
DHDCFLAGS += -DPOWER_OFF_IN_SUSPEND
endif

ifeq ($(CONFIG_BCMDHD_AG),y)
DHDCFLAGS += -DBAND_AG
endif

ifeq ($(CONFIG_DHD_USE_STATIC_BUF),y)
DHDCFLAGS += -DSTATIC_WL_PRIV_STRUCT
endif

