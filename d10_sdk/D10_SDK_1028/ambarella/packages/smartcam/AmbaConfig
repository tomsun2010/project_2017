menuconfig BUILD_AMBARELLA_SMARTCAM_PACKAGE
	bool "Build Ambarella Smartcam Package"
	default n
	help
		Build Build Smartcam Package.

if BUILD_AMBARELLA_SMARTCAM_PACKAGE

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_MDET
	bool "Build Motion Detection Library"
	select CONFIG_AMBARELLA_OPENCV_SUPPORT
	select CONFIG_AMBARELLA_OPENCV_CORE_LIB_SUPPORT
	default n
	help
		Build Motion Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_FDET
	bool "Build Face Detection Library"
	default n
	help
		Build Face Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_HDET
	bool "Build Head Detection Library"
	default n
	help
		Build Head Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_MHDET
	bool "Build Motion Detection Based Head Detection Library"
	default n
	help
		Build Motion Detection Based Head Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_PEDESTRIAN
	bool "Build Pedestrian Detection Library"
	default n
	help
		Build Pedestrian Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_HUMAN
	bool "Build Human Detection Library"
	default n
	help
		Build Human Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_FREC
	bool "Build Face Recognition Library"
	default n
	help
		Build Face Recognition Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_DEFOG
	bool "Build Defog Library"
	default n
	help
		Build Defog Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_PDET
	bool "Build Plate Detection Library"
	default n
	help
		Build Plate Detection Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_STEREO
	bool "Build Stereo Vision Library"
	default n
	help
		Build Stereo Vision Library.

config BUILD_AMBARELLA_SMARTCAM_PACKAGE_VOC
	bool "Build Visual Object Classes Library"
	default n
	help
		Build Visual Object Classes Library.

endif

