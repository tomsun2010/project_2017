############# Marvell SD8688 ############

config BUILD_MARVELL_WIFI_BT_SD8688
depends on BUILD_WIFI_BLUETOOTH_MODULES
	bool "Marvell WiFi-Bluetooth SD8688"
	default n
	help
		Select the Marvell WiFi-Bluetooth SD8688 driver.

menu "SD8688 Configuration"
depends on BUILD_MARVELL_WIFI_BT_SD8688

config BUILD_MARVELL_WIFI_BT_SD8688_BT
	bool "SD8688 bluetooth driver"
	default n
	help
		Select SD8688 bluetooth driver.
		Verified on Kernel 2.6.38

config BUILD_MARVELL_WIFI_BT_SD8688_WLAN
	bool "SD8688 wifi driver"
	default n
	help
		Select SD8688 wifi driver.
		Verified on Kernel 2.6.38

endmenu

