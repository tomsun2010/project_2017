LOCAL_PATH := $(call my-dir)

### libammuxer-jpeg-base.so
include $(CLEAR_VARS)

MUXER_JPEG_BASE = libammuxer-jpeg-base.so
LOCAL_TARGET := $(MUXER_JPEG_BASE)
LOCAL_SRCS   := $(wildcard $(LOCAL_PATH)/*.cpp)
EXIF_CONFIG   = jpeg-exif.acs

LOCAL_CFLAGS := -std=c++11 -Werror                        \
                -I$(LOCAL_PATH)                           \
                -I$(ORYX_DIR)/include                     \
                -I$(ORYX_DIR)/include/configure           \
                -I$(ORYX_DIR)/include/utility             \
                -I$(ORYX_DIR)/include/video               \
                -I$(ORYX_DIR)/stream/include/amf          \
                -I$(ORYX_DIR)/stream/include/common       \
                -I$(ORYX_DIR)/stream/include/common/io    \
                -I$(ORYX_DIR)/stream/include/stream       \
                -I$(ORYX_DIR)/stream/include/record       \
                -I$(ORYX_DIR)/stream/include/common/media \
                -I$(PREBUILD_3RD_PARTY_DIR)/libexif/include \
                -I$(ORYX_DIR)/include/services      \
                -I$(ORYX_DIR)/include/ipc           \


LOCAL_LIBS := libamutil.so    \
              libamosal.so    \
              libamfile-sink.so \
              libamapi.so

LOCAL_LDFLAGS := -L$(PREBUILD_3RD_PARTY_DIR)/libexif/usr/lib -lexif \
                 -Wl,-rpath=$(patsubst $(FAKEROOT_DIR)/%,%,$(ORYX_MUXER_DIR)) \
                 -Wl,-rpath-link=$(FAKEROOT_DIR)/usr/lib

MUXER_JPEG_BASE_NAME   = $(MUXER_JPEG_BASE)
MUXER_JPEG_BASE_TARGET = $(MUXER_JPEG_BASE)
LOCAL_SO_NAME := $(MUXER_JPEG_BASE)

include $(BUILD_APP)
.PHONY: $(LOCAL_TARGET)

$(LOCAL_TARGET): MUXER_JPEG_BASE_SRC_PATH := $(LOCAL_PATH)
$(LOCAL_TARGET): $(LOCAL_MODULE)
	@mkdir -p $(ORYX_MUXER_DIR)/
	@mkdir -p $(ORYX_CONF_DIR)/stream/muxer
	@cp -dpRf $< $(ORYX_MUXER_DIR)/$(MUXER_JPEG_BASE_TARGET)
	@cp -dpRf $(MUXER_JPEG_BASE_SRC_PATH)/$(EXIF_CONFIG) $(ORYX_CONF_DIR)/stream/muxer/$(EXIF_CONFIG)
	@echo "Build $@ Done."

$(call add-target-into-build, $(LOCAL_TARGET))
